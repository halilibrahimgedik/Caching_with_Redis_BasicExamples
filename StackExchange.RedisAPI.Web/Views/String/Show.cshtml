@{
    string imgSrc = null;
    if (ViewData["ImageSrc"] != null)
    {
        imgSrc = ViewData["ImageSrc"] as string;
    }

}

<h2>String Controller - Show Metot</h2>
<br />


<h4>@ViewBag.Name - @ViewBag.Occupation</h4>
<h5>Görüntülenme sayısı: @ViewBag.Viewer</h5>

<div>
    @if (!string.IsNullOrEmpty(imgSrc))
    {
        <img src="@ViewData["ImageSrc"]" style="max-height:300px; max-width:300px" />
    }
    else
    {
        <p>Resim Dosyası Bulunamadı !</p>
    }
</div>


